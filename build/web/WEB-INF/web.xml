        <servlet-name>SubjectServlet</servlet-name>
        <servlet-class>controller.SubjectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BOOKLIST</servlet-name>
        <jsp-file>/pages/bookList.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SemesterServlet</servlet-name>
        <url-pattern>/SemesterServlet</url-pattern>
    </servlet-mapping>
