    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SEMJSP</servlet-name>
        <url-pattern>/sem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectServlet</servlet-name>
        <url-pattern>/SubjectServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SUBLIST</servlet-name>
        <url-pattern>/sublist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BOOKLIST</servlet-name>
        <url-pattern>/booklist</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>lgin</welcome-file>
